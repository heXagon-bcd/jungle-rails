<h1>New Category</h1>

<%= form_with(model: [:admin, @category], local: true) do |form| %>
  <% if @category.errors.any? %>
    <!-- Error messages -->
  <% end %>

  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  
  <div>
    <%= form.submit 'Create Category' %>
  </div>
<% end %>
